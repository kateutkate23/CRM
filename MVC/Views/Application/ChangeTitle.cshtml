@model MVC.Models.MainTitle

<h2>Изменение заголовка</h2>
<form method="post">
    <div class="form-group">
        <label for="exampleFormControlTextarea1" class="mt-3">Введите новый заголовок:</label>
        <textarea class="form-control mt-3" id="exampleFormControlTextarea1" rows="2" asp-for="Title"></textarea>
    </div>
    <button type="submit" asp-action="ChangeTitle" class="btn btn-primary mt-3">Сохранить</button>
    <button type="submit" asp-action="Index" class="btn btn-danger mt-3">Отмена</button>
</form>