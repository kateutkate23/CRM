@model MVC.ViewModels.ApplicationVM

@{
    ViewData["Title"] = "Главная";
}

<h1>@ViewData["MainTitle"]</h1>
@if (User?.IsInRole("Admin") == true)
{
    <a type="submit" class="btn btn-primary mt-3" asp-controller="Application" asp-action="ChangeTitle">Редактировать</a>
}
<h3 class="mt-3">Оставить заявку или задать вопрос</h3>
<form method="post">
    <div class="form-group">
        <label for="exampleInputPassword1">Имя:</label>
        <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email:</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Сообщение:</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Message">
    </div>
    <button type="submit" class="btn btn-primary mt-3" asp-action="Send" asp-controller="Application">Отправить</button>
</form>