@model MVC.ViewModels.UpdateProjectVM

@{
    ViewData["Title"] = $"Обновление проекта {Model.Id}";
}

<h2>Изменение поста</h2>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ImageURL" />
    <div class="form-group">
        <label for="exampleInputEmail1">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1" class="mt-3">Введите новый заголовок:</label>
        <textarea class="form-control mt-3" id="exampleFormControlTextarea1" rows="1" asp-for="Title"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1" class="mt-3">Введите новое описание:</label>
        <textarea class="form-control mt-3" id="exampleFormControlTextarea1" rows="5" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image">Изображение:</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Выберите изображение">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" asp-action="UpdateProject" class="btn btn-primary mt-3">Сохранить</button>
    <button type="submit" asp-action="DeleteProject" class="btn btn-danger mt-3">Удалить проект</button>
</form>